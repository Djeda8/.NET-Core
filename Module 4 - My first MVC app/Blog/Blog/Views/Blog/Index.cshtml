@model IEnumerable<Blog.Models.Entities.Post>
@{
    ViewData["Title"] = "Latest posts";
}
<h2>@ViewData["Title"]</h2>
<ul>
    @foreach (var post in Model)
    {
    <li>
        <h3>@post.Title</h3>
        <div>
            Posted by @post.Author on @post.Date.ToString("d")
        </div>
        <div>
            @*<a href="view-post/blog/@post.Slug">Read post...</a>*@
            <a asp-controller="blog" asp-action="viewpost" asp-route-slug="@post.Slug">
                Read post...
            </a>
        </div>
        @if (post.Comments.Any())
        {
            <div>@post.Comments.Count() comments</div>
        }
    </li>
    }
</ul>

